<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Category</th>
      <th>Picture</th>
      <th>Name</th>
      <th>Price</th>
      <th>Operations</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.cate.name %></td>
        <td><%= image_tag item.cover.url(:icon) , :width => 150 , :height => 150 %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td>
          <%= link_to 'Edit', edit_dashboard_admin_item_path(item) %>
          <%= link_to 'Destroy', dashboard_admin_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_dashboard_admin_item_path %>
